  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "bootstrap-sass": "^3.3.7",
    "css-loader": "^0.26.1",
    "file-loader": "^0.10.0",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "^3.0.2",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "resolve-url-loader": "^2.0.0",
    "sass-loader": "^6.0.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1"
  },
  "scripts": {
    "clean": "rm -rfv ./dist/frontend/*; rm -rfv ./dist/backend/*",
    "build": "yarn run clean && yarn run build-frontend && yarn run build-backend",
    "build-frontend": "./node_modules/webpack/bin/webpack.js --progress --profile --colors --optimize-minimize true",
    "build-backend": "./node_modules/babel-cli/bin/babel.js --out-dir ./dist/backend ./backend",
    "start-dev-frontend": "./node_modules/webpack/bin/webpack.js --progress --profile --colors --watch",
    "start-dev-backend": "./node_modules/nodemon/bin/nodemon.js ./backend/main.js --exec ./node_modules/babel-cli/bin/babel-node.js --watch ./backend",
    "serve": "node ./dist/backend/main.js"
  }
}
