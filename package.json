    "build-server": "./node_modules/babel-cli/bin/babel.js --source-maps true --out-dir ./server/build ./server/main.js",
    "start-dev-client": "./node_modules/webpack/bin/webpack.js --progress --profile --colors --watch",
    "start-dev-server": "./node_modules/nodemon/bin/nodemon.js ./node_modules/babel-cli/bin/babel-node.js ./server/main.js",
    "start-server": "node ./server/build/server/main.js"
