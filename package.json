{
  "name": "shpng",
  "author": "resurtm <resurtm@gmail.com>",
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "nodemon": "^1.11.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "webpack": "^2.2.1"
  },
  "scripts": {
    "clean": "rm -rfv ./public/build/*; rm -rfv ./server/build/*",
    "build-server": "./node_modules/babel-cli/bin/babel.js --source-maps true --out-dir ./server/build ./server/main.js",
    "build-client": "./node_modules/webpack/bin/webpack.js --progress --profile --colors",
    "build": "yarn run clean && yarn run build-server && yarn run build-client",
    "watch-dev-server": "./node_modules/babel-cli/bin/babel.js --source-maps true --out-dir ./server/build ./server/main.js --watch",
    "watch-dev-client": "./node_modules/webpack/bin/webpack.js --progress --profile --colors --watch",
    "start-server": "node ./server/build/server/main.js",
    "start-dev-server": "./node_modules/nodemon/bin/nodemon.js ./server/build/server/main.js"
  }
}
